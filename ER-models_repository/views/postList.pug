extends layout

block content
  h1= title
  
  ul
  - post_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
  each post in post_list
    li 
      a(href=post.url) #{post.name} 

  else
    li There are no posts.  